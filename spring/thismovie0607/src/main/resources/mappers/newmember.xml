<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.co.ictedu.thismovie0607.dao.NewMemberDao">
	<insert id="add" parameterType="newmemvo"> insert into newmember values(newmember_seq.nextVal, #{id}, #{pwd}, #{name},#{age},#{gender},#{phone}, #{email}, #{imgname}, #{reip}, #{height}, #{weight}, #{bmi}, #{pred}, sysdate) </insert>
	<select id="list" resultType="newmemvo"> select * from newmember order by 1 desc </select>
	<select id="detail" parameterType="int" resultType="newmemvo"> select * from newmember where num=#{num} </select>
	<select id="idcheck" parameterType="String" resultType="int"> select count(*) cnt from newmember where id=#{id} </select>
	<select id="getTotal" resultType="int"> select count(*) cnt from newmember </select>
</mapper>